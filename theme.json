{
  "label": "TF Aco e Inox Theme",
  "version": "1.0.0",
  "editor_css": [
    "css/main.hubl.css"
  ],
  "settings": [
    {
      "name": "header_settings",
      "label": "Header Settings",
      "type": "group",
      "expanded": true,
      "children": [
        {
          "name": "header_style",
          "label": "Header Style",
          "type": "choice",
          "display": "select",
          "default": "glassmorphism",
          "choices": [
            ["glassmorphism", "Glassmorphism Light (Blur)"],
            ["glassmorphism_dark", "Glassmorphism Dark (Industrial)"],
            ["solid_white", "Solid White"],
            ["solid_black", "Solid Black (Industrial)"],
            ["transparent_light", "Transparent (Light Text)"],
            ["transparent_dark", "Transparent (Dark Text)"],
            ["minimal", "Minimal (Thin)"]
          ],
          "help_text": "Choose the visual style of the header."
        },
        {
          "name": "header_logo_height",
          "label": "Logo Height (px)",
          "type": "number",
          "default": 60,
          "min": 20,
          "max": 120
        },
        {
          "name": "header_sticky",
          "label": "Sticky Header",
          "type": "boolean",
          "default": true,
          "help_text": "Header stays at top when scrolling."
        },
        {
          "name": "header_show_search",
          "label": "Show Search Icon",
          "type": "boolean",
          "default": true
        },
        {
          "name": "header_show_cta",
          "label": "Show CTA Button",
          "type": "boolean",
          "default": true
        }
      ]
    }
  ]
}
